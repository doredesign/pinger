<html>
  <head>
    <title>Pinger</title>
    <style>
      body {
        margin: 0;
      }
      h1 {
        height: 100%;
        width: 100%;
        padding: 20px;
      }
      h1#all_good {
        background-color: #2b2b2b;
        color: white;
      }
      h1#warn {
        background-color: #ffb700;
        color: white;
      }
      h1#error {
        animation: ANNOYING-BG 0.5s infinite;
        color: white;
      }
      @-webkit-keyframes ANNOYING-BG {
      0%, 49% {
          background-color: #ff0000;
      }
      50%, 100% {
          background-color: blue;
      }
    </style>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script type="text/javascript">
$(function(){
  $allGood = $("#all_good");
  $warn = $("#warn");
  $error = $("#error");

  let updateView = function(data){
    console.log(data);
    if(data.error) return error(data.error);
    if(data.time > 500) return error("Time is " + data.time);
    if(data.time < 300) return goNormal();

    warn("Time is " + data.time);
  };
  let goNormal = function(){
    $allGood.show();
    $warn.hide();
    $error.hide();
  };
  let warn = function(text){
    $allGood.hide();
    $warn.text(text).show();
    $error.hide();
  };
  let error = function(text){
    $allGood.hide();
    $error.text(text).show();
    $warn.hide();
  };

  goNormal();
  window.setInterval(function(){
    $.get("/ping", updateView);
  }, 1000);
});
    </script>
  </head>
  <body>
    <h1 id="all_good"></h1>
    <h1 id="warn"></h1>
    <h1 id="error"></h1>
  </body>
</html>
